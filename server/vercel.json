{
  "version": 2,
  "builds": [
    {
      "src": "api/index.ts",
      "use": "@vercel/node",
      "config": {
        "includeFiles": [
          "node_modules/**",
          "node_modules/@clerk/shared/dist/**",
          "node_modules/@clerk/express/dist/**",
          "dist/**"
        ],
        "bundle": false
      }
    }
  ],
  "routes": [
    { "src": "/(.*)", "dest": "/api/index.ts" }
  ]
}